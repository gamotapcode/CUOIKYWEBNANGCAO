@model CUOIKYLTWEBNANGCAO.Models.TbSanpham
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Xoá Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Xoá sản phẩm</h1>

<h3>Bạn thật sự muốn xoá à?</h3>
<p>@TempData["Messages"]</p>
<div>
    <h4>TbSanpham</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tensanpham)
        </dd>
        <dt class="col-sm-2">
            Đơn giá
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dongia)
        </dd>
        <dt class="col-sm-2">
            Số lượng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soluong)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hinhanh)
        </dd>
        <dt class="col-sm-2">
           Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mota)
        </dd>
        <dt class="col-sm-2">
            Tên danh mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MadanhmucNavigation.Tendanhmuc)
        </dd>
    </dl>

    <form asp-action="XoaSanPham">
        <input type="hidden" asp-for="Masanpham" />
        <input type="submit" value="Xoá" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về</a>
    </form>
</div>
