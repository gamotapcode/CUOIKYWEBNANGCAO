@using CUOIKYLTWEBNANGCAO.Models;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TbSanpham>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Quản lý sản phẩm</h1>

<p>
    <a asp-action="ThemSanPham">Thêm mới sản phẩm</a>
</p>
<p>@TempData["Messages"]</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Tên danh mục
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tensanpham)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dongia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Soluong)
                </td>
                <td  style="text-align: center;">
                    <img src="@Url.Content("~/ImageProducts/" + item.Hinhanh)" alt="@item.Hinhanh" title="@item.Hinhanh" width="50" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MadanhmucNavigation.Tendanhmuc)
                </td>
                <td>
                    <a asp-action="SuaSanPham" asp-route-masanpham="@item.Masanpham">Sửa</a> |
                    <a asp-action="XoaSanPham" asp-route-masanpham="@item.Masanpham">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="product__pagination" style="flex: 0 0 100%;">
    @Html.PagedListPager(Model, page => Url.Action("DanhSachSanPham", new { page = page }))
</div>


<style>
    .pagination {
        justify-content: center;
    }
</style>
