@{
    ViewData["Title"] = "Trang chủ";
}
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TbSanpham>


@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 mix vegetables fastfood">
        <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg="../ImageProducts/@item.Hinhanh" >
                <ul class="featured__item__pic__hover">
                    <li><a href="#"><i class="fa fa-heart"></i></a></li>
                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                    <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                </ul>
            </div>
            <div class="featured__item__text">
                <h6><a asp-controller="Home" asp-action="ProductDetail" asp-route-maSP="@item.Masanpham">@item.Tensanpham</a></h6>
                <h5>$@item.Dongia</h5>
            </div>
        </div>
    </div>
}
    <div class="product__pagination" style="flex: 0 0 100%;">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>


<style>
    .pagination {
        justify-content: center;
    }
</style>
